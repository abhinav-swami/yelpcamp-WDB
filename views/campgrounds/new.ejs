<%- include("../partials/header")%>


<div class="container">
	<div class="row ">
		<h1 style="text-align:center">Add new campround</h1>
		<div style="width:30%; margin:30px auto;">
			<form method="post" action="/campgrounds">
				<div class="form-group">
					<input class="form-control" type= "text" name="name" placeholder="name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type= "number" name="price" placeholder="price" min:"300" step:"100" required>
				</div>
				<div class="form-group">
					<input class="form-control" type= "text" name="image" placeholder="image url" required>
				</div>
				<div class="form-group">
					<input class="form-control" type= "text" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>	
			
		</div>
		
	</div>
	
</div>

